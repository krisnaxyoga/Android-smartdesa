<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pengaduan.DetailPengaduan"
    android:orientation="vertical"
    android:background="@drawable/background_primary">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_gravity="left"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pengaduan Masyarakat"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/icn_complaint"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_putih_bawah_datar">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
            <GridLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alignmentMode="alignMargins"
                android:columnCount="1"
                android:columnOrderPreserved="false"
                android:rowCount="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:drawableStart="@drawable/ic_person"
                    android:gravity="left"
                    android:paddingLeft="3dp"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint="Nama Penduduk"
                        android:textColor="#767c77"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_nama"
                        android:layout_width="293dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint="xxx"
                        android:textColor="#767c77"
                        android:textSize="16dp"
                        android:textStyle="bold" />
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_desa"
                        android:layout_width="293dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint="xxx"
                        android:textColor="#767c77"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:drawableStart="@drawable/ic_credit_card"
                    android:gravity="left"
                    android:paddingLeft="3dp"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint="NIK / No KTP"
                        android:textColor="#767c77"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_nik"
                        android:layout_width="293dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint="xxx"
                        android:textColor="#767c77"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="32dp"
                    android:drawableStart="@drawable/ic_baseline_markunread_mailbox_24"
                    android:gravity="left"
                    android:paddingLeft="3dp"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="304dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="225dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint="Kategori Pengaduan"
                        android:textColor="#767c77"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/tv_kategori"
                        android:layout_width="293dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="10dp"
                        android:hint="xxx"
                        android:textAllCaps="true"
                        android:textColor="#767c77"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </LinearLayout>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:hint="Judul Pengaduan"
                    android:textColor="#767c77"
                    android:textSize="16dp" />

            <EditText
                android:id="@+id/et_title"
                android:hint="Masukkan Judul"
                android:layout_gravity="center"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"></EditText>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:hint="Deskripsi Pengaduan"
                    android:textColor="#767c77"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/et_content"
                    android:hint="Masukkan Deskripsi"
                    android:layout_gravity="center"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"></EditText>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:hint="Foto Pengaduan"
                    android:textColor="#767c77"
                    android:textSize="16dp" />

                <ImageView
                    android:visibility="gone"
                    android:src="@drawable/gallery"
                    android:id="@+id/foto_pengaduan"
                    android:layout_gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>

                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_kamera"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/roundblue"
                    android:text="Buka Kamera"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:textColor="#FFFF"
                    android:layout_marginTop="5dp"/>

                <Button
                    android:id="@+id/btn_kirim"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/roundlogin"
                    android:text="Kirim Pengaduan"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="#FFFF" />

            </GridLayout>
            </ScrollView>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>