<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pengaduan.FnDisposisi"
    android:background="@drawable/background_primary">

    <RelativeLayout
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtdashboard"
            android:text="DISPOSISI"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="21dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtdashboard2"
            android:layout_below="@+id/txtdashboard"
            android:text="Reply Pengaduan"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/round_putih_bawah_datar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:text="Kembali"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="left"
                        android:fontFamily="@font/lato_light"/>

                    <TextView
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Data Pengaduan"
                        android:textSize="18dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/colorPrimary"
                        android:gravity="right"
                        android:fontFamily="@font/lato_light"/>

                </LinearLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:visibility="gone"
                            android:src="@drawable/images"
                            android:id="@+id/images"
                            android:layout_gravity="center"
                            android:layout_marginTop="70dp"
                            android:layout_width="150dp"
                            android:layout_height="150dp"/>

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:layout_marginTop="50dp">

                        </LinearLayout>

                        <GridLayout
                            android:padding="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:alignmentMode="alignMargins"
                            android:columnCount="1"
                            android:columnOrderPreserved="false"
                            android:rowCount="1">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="32dp"
                                    android:drawableStart="@drawable/ic_isitext"
                                    android:gravity="left"
                                    android:paddingLeft="3dp"
                                    android:textColor="@color/white" />

                                <LinearLayout
                                    android:layout_width="304dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="225dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="Nomor Pengaduan:"
                                        android:textColor="#767c77"/>

                                    <TextView
                                        android:id="@+id/no_pengaduan"
                                        android:layout_width="293dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="-"
                                        android:textColor="#767c77"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="32dp"
                                    android:drawableStart="@drawable/ic_person"
                                    android:gravity="left"
                                    android:paddingLeft="3dp"
                                    android:textColor="@color/white" />

                                <LinearLayout
                                    android:layout_width="304dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="225dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="Disposisi oleh:"
                                        android:textColor="#767c77"/>

                                    <TextView
                                        android:id="@+id/tv_nama_disposisi"
                                        android:layout_width="293dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="-"
                                        android:textColor="#767c77"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="32dp"
                                    android:drawableStart="@drawable/ic_history_black"
                                    android:gravity="left"
                                    android:paddingLeft="3dp"
                                    android:textColor="@color/white" />

                                <LinearLayout
                                    android:layout_width="304dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="225dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="Disposisi tanggal:"
                                        android:textColor="#767c77"/>

                                    <TextView
                                        android:id="@+id/tv_created_at"
                                        android:layout_width="293dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="-"
                                        android:textColor="#767c77"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="32dp"
                                    android:drawableStart="@drawable/ic_edit"
                                    android:gravity="left"
                                    android:paddingLeft="3dp"
                                    android:textColor="@color/white" />

                                <LinearLayout
                                    android:layout_width="304dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="225dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="Diedit tanggal:"
                                        android:textColor="#767c77"/>

                                    <TextView
                                        android:id="@+id/tv_updated_at"
                                        android:layout_width="293dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="-"
                                        android:textColor="#767c77"
                                        android:textSize="16dp"
                                        android:textStyle="bold" />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="30dp"
                                    android:layout_height="32dp"
                                    android:drawableStart="@drawable/ic_orti"
                                    android:gravity="left"
                                    android:paddingLeft="3dp"
                                    android:textColor="@color/white" />

                                <LinearLayout
                                    android:layout_width="304dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="225dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="Isi Komentar:"
                                        android:textColor="#767c77" />

                                    <TextView
                                        android:id="@+id/tv_content"
                                        android:layout_width="293dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="-"
                                        android:textColor="#767c77"
                                        android:textSize="16dp"/>

                                </LinearLayout>
                            </LinearLayout>

                        </GridLayout>

                    </LinearLayout>
                </ScrollView>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>